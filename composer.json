{
    "name": "emedia/app-settings",
    "description": "Set application-wide settings in the database and retrieve them.",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Shane Perera",
            "email": "shane@elegantmedia.com.au"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "cviebrock/eloquent-sluggable": "^8.0",
        "elegantmedia/oxygen-foundation": "^1.0",
        "emedia/formation": "^0.4|^0.5|^0.6"
    },
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "EMedia\\AppSettings\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type":"vcs",
            "url":"git@bitbucket.org:elegantmedia/formation.git"
        },
		{
			"type":"vcs",
			"url":"git@bitbucket.org:elegantmedia/lotus.git"
		}
    ],
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "EMedia\\AppSettings\\AppSettingsServiceProvider"
            ],
            "aliases": {
                "Setting": "EMedia\\AppSettings\\Facades\\Setting"
            }
        }
    }
}
